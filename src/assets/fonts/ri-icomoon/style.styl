@import "variables"

@font-face
  font-family 'ri-icomoon'
  src url($icomoon-font-path + '/ri-icomoon.eot?ur64cf')
  src url($icomoon-font-path + '/ri-icomoon.eot?ur64cf#iefix') format('embedded-opentype'), url($icomoon-font-path + '/ri-icomoon.ttf?ur64cf') format('truetype'), url($icomoon-font-path + '/ri-icomoon.woff?ur64cf') format('woff'), url($icomoon-font-path + '/ri-icomoon.svg?ur64cf#ri-icomoon') format('svg')
  font-weight normal
  font-style normal

.ri-icon
  font-family 'ri-icomoon' !important
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1

  /* Better Font Rendering =========== */
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.ri-icon--phone
  &:before
    content $ri-icon-phone
.ri-icon--envelop
  &:before
    content $ri-icon-envelop
.ri-icon--location
  &:before
    content $ri-icon-location

